---
import BaseLayout from '@layouts/BaseLayout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
---

<BaseLayout title="404 - Page Not Found">
  <Header />
  
  <main class="flex-1 pt-20 px-4 sm:px-6 lg:px-8 max-w-4xl mx-auto pb-16">
    <div class="py-24 text-center">
      <h1 class="text-8xl font-bold text-gray-300 dark:text-gray-700">404</h1>
      <h2 class="text-3xl font-semibold mt-4 mb-6">Page Not Found</h2>
      <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">
        Sorry, the page you're looking for doesn't exist.
      </p>
      <a 
        href="/"
        class="inline-block px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors"
      >
        Go Back Home
      </a>
    </div>
  </main>
  
  <Footer />
</BaseLayout>