---
import BaseLayout from '@layouts/BaseLayout.astro';
import Header from '@components/Header.astro';
---

<BaseLayout title="404 - Page Not Found">
  <Header />
  
  <main class="flex-1 pt-20 px-4 sm:px-6 lg:px-8 max-w-4xl mx-auto pb-16">
    <div class="py-24 text-center">
      <h1 class="text-8xl font-bold" style="color: var(--divider);">404</h1>
      <h2 class="text-3xl font-semibold mt-4 mb-6" style="color: var(--text-primary);">Page Not Found</h2>
      <p class="text-lg mb-8" style="color: var(--text-secondary);">
        Sorry, the page you're looking for doesn't exist.
      </p>
      <a 
        href="/"
        class="inline-block px-6 py-3 rounded-lg transition-all hover:shadow-lg font-semibold"
        style="background-color: var(--accent); color: white;"
      >
        Go Back Home
      </a>
    </div>
  </main>
</BaseLayout>